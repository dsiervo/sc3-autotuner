# Defines the channel code of the preferred stream used by e.g. scautopick and
# scrttv. If no component code is given, the vertical component will be fetched
# from inventory. For that the channel orientation (azimuth, dip) will be used.
# If that approach fails, 'Z' will be appended and used as fallback.
detecStream = HHZ

# Configures the filter used to compute the L2.
spicker.AIC.filter = BW(4,0.3,1.0)

# Configures the detector in the filtered L2. This filter is applied on top of
# the base L2 filter.
spicker.AIC.detecFilter = STALTA(1,10)

# The AIC time window stepping in seconds. For every step the AIC is computed.
spicker.AIC.step = 1

# Defines the mininum SNR as returned from AIC.
spicker.AIC.minSNR = 5

# Defines the minimum number of hits for a particular pick time when the
# running AIC is computed.
spicker.AIC.minCnt = 3

# Configures the detector in the filtered L2. This filter is applied on top of
# the base L2 filter.
spicker.L2.detecFilter = STALTA(1,10)

# Overrides the default filter which is "raw". The typical filter grammar can
# be used.
picker.AIC.filter = BW(4,2.00,8.00)

# Defines the mininum SNR.
picker.AIC.minSNR = 3.0

# Defines the filter to be used for picking.
detecFilter = "RMHP(10)>>ITAPER(30)>>BW(4,2.00,8.00)>>STALTA(0.10,5.70)"

# For which value on the filtered waveform is a pick detected.
trigOn = 11.11

# The value the filtered waveform must reach to enable a detection again.
trigOff = 1.0

# The time correction applied to a detected pick.
timeCorr = -0.12
